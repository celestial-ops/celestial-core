{
 :operates-on "redis"
 :src "git://github.com/narkisr/cap-demo.git"
 :actions {
    :deploy {
       :capistrano {:args ["deploy" "-s" "hostname=~{target}"]} 
     } 
     :restart {
       :capistrano {:args ["restart" "-s" "hostname=~{target}"]}
    }
    :run-all {
       :ruby {:args ["config/runall.rb" "tasks=deploy,deploy:restart" "-s" "hostname=~{target}"]}
    }

 }
}
